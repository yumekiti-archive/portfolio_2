---
import '@splidejs/splide/css/skyblue';

import Card from '../molecules/Card.astro'

const { works } = Astro.props
---

<script>
	import Splide from '@splidejs/splide';

	new Splide('.splide', {
		perPage : 3,
		rewind : true,
		autoplay: true,
		interval: 5000,
		pauseOnHover: true,
		gap: '0.8rem',
		breakpoints: {
			1024: {
				perPage: 2,
			},
			640: {
        arrows: false,
				perPage: 1,
			}
		}
	}).mount();
</script>


<Card title="Work">
  <section class="splide" aria-label="works">
    <div class="splide__track">
      <ul class="splide__list">
        {
          works.map((work: any) => (
            <li class="splide__slide">
              <a href={`work/${work.slug}`}>
                <img src={work.data.thumbnail} alt="Astro" class="border border-2 rounded aspect-video object-cover hover:animate-jello-horizontal cursor-pointer" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Card>