---
import Card from '../molecules/Card.astro'
---

<Card title="Contact">
  <div class="flex flex-col gap-4 justify-center items-center">
    <input class="w-full md:w-8/12 lg:w-4/12 h-12 rounded pl-4 border-2" type="text" placeholder="名前" />
    <input class="w-full md:w-8/12 lg:w-4/12 h-12 rounded pl-4 border-2" type="text" placeholder="メールアドレス" />
    <textarea class="w-full md:w-8/12 lg:w-4/12 h-64 rounded p-2 border-2" />
    <button class="w-full md:w-8/12 lg:w-4/12 h-12 rounded bg-emphasis text-button-text hover:bg-emphasis-hover">
      送信
    </button>
  </div>
</Card>