---
import Card from '../molecules/Card.astro'
---

<Card title="Contact">
  <div class="flex justify-center items-center">
    <div class="flex flex-col gap-4 w-full md:w-8/12 lg:w-4/12">
      <input class="h-12 rounded pl-4 border-2" type="text" placeholder="名前" />
      <input class="h-12 rounded pl-4 border-2" type="text" placeholder="メールアドレス" />
      <textarea class="h-64 rounded p-2 border-2" />
      <button class="h-12 rounded bg-highlight text-highlight-text hover:bg-highlight-hover">
        送信
      </button>
    </div>
  </div>
</Card>